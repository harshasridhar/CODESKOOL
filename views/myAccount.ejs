<html>
    <head>
        <title>My Account Page</title>
        <link rel="stylesheet" href="/assets/css/myAccount.css">
    </head>
    <body>
        <% include header.ejs%> <br><br><br>
        <% 
            var subms = submissions;
            var c=0,cpp=0,java=0;python=0;
            for(var i=0;i<subms.length;i++){
                switch(subms[i].language){
                    case 'C' : c++; break;
                    case 'C++' : cpp++; break;
                    case 'Java' : java++; break;
                    case 'Python3' : python++; break;
                }
            }
        %>
        <div id="card">
        <table>
            <tr><th>UserName</th><td><%= username%></td></tr>
            <tr><th>Email Id</th><td><%= email%></td></tr>
            <tr><th>Submissions</th><td><%= subms.length%></td></tr>
            <tr><th>Languages Used</th>
                <td>
                    <ul>
                        <% if(c!=0){%>
                            <li>C - <%= c%> submissions</li>
                        <% } %>
                        <% if(cpp!=0){%>
                            <li>C++ - <%= cpp%> submissions</li>
                        <% } %>
                        <% if(java!=0){%>
                            <li>Java - <%= java%> submissions</li>
                        <% } %>
                        <% if(python!=0){%>
                            <li>Python - <%= python%> submissions</li>
                        <% } %>
                    </ul>
                </td>
            </tr>
        </table>
        </div>
    </body>
</html>